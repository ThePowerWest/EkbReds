@model Dictionary<User, int>
@{
    int userCount = 1;
}
<div class="col-lg-4">
    <div class="point-table-widget">
        <table>
            <thead>
                <tr>
                    <th>№</th>
                    <th>Имя</th>
                    <th>Очки</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@(userCount++)</td>
                        <td><img src="images/tl-logo1.png" alt=""> <strong>@user.Key.UserName | @user.Key.FirstName @user.Key.SurName</strong></td>
                        <td><strong>@user.Value</strong></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>