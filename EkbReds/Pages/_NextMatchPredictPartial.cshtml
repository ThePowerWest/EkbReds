<h5 class="title">Следующий матч</h5>
<div class="nmw-wrap">
    <ul class="match-teams-vs">
        <li class="team-logo"><img src="@Model.Matches.ElementAt(0).HomeTeamLogo" alt="" width="80"> <strong>@Model.Matches.ElementAt(0).HomeTeamName</strong> </li>
        <li class="mvs"> <strong class="vs">VS</strong> </li>
        <li class="team-logo"><img src="@Model.Matches.ElementAt(0).AwayTeamLogo" alt="" width="80"> <strong>@Model.Matches.ElementAt(0).AwayTeamName</strong> </li>
    </ul>
    <ul class="nmw-txt">
        <li><strong>@Model.Matches.ElementAt(0).Tournament.Name</strong></li>
        <li>@Model.Matches.ElementAt(0).StartDate</li>
    </ul>
    <div class="defaultCountdown"></div>
</div>






