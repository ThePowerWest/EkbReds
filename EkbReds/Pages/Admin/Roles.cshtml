@page
@model Web.Pages.Admin.RolesModel
@{
}
<div  style="height: 300px;overflow:hidden;width:100%;">
    <img style="height: 300px; width:100%" src="/images/innerbanner.jpg" />
</div>
<div class="container" style="padding:30px 0 20px 0">
    <div class="row">
        <div class="col-md-6">
            <h2>Добавить новую роль</h2>
            <form method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <br />
                    <div class="form-group float-end">
                        <button type="submit" asp-page-handler="AddRole" class="btn btn-dark">Добавить</button>
                    </div>
            </form>
        </div>
        <div class="col-md-6">
            <h2>Удалить существующую роль</h2>
            <form method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <br />
                    <div class="form-group float-end">
                        <button type="submit" asp-page-handler="DeleteRole" class="btn btn-dark">Удалить</button>
                    </div>
            </form>
        </div>
    </div>

</div>
