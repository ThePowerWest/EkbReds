@page
@model Web.Pages.Admin.EditRoleModel
@{
}
<div  style="height: 300px;width:100%; padding: 140px 0 300px 0">
    <img style="height: 300px; width:100%" src="/images/innerbanner.jpg" />
</div>
<div class="container" style="padding:30px 0 20px 0">
    <div class="row">
        <div class="col-md-12">
            <h2>Редактирование роли</h2>
            <form method="post">
                <hr />
                <div class="form-group">
                    <label asp-for="Input.Id"></label>
                    <input asp-for="Input.Id" class="form-control" readonly="readonly"/>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" readonly="readonly"/>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewName"></label>
                    <input asp-for="Input.NewName" class="form-control" placeholder="Новое имя роли" />
                    <span asp-validation-for="Input.NewName" class="text-danger"></span>
                </div>
                <br />
                    <div class="form-group float-end">
                        <button type="submit" asp-page-handler="EditRole" class="btn btn-success">Сохранить</button>
                    </div>
            </form>
        </div>
    </div>
</div>