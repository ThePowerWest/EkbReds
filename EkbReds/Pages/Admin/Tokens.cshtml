@page
@model Web.Pages.Admin.TokensModel
@{
}
<div  style="height: 300px;width:100%; padding: 140px 0 300px 0">
    <img style="height: 300px; width:100%" src="/images/innerbanner.jpg" />
</div>
<div class="container" style="padding:30px 0 20px 0">
    <!--Список пользователей-->
    <div class="row" style="padding:30px 0 30px 0">
        <div class="col-md-12">
            <h2 class="text-center">Список ключей API</h2>
            <!--Триггер-->
            <button type="button" data-toggle="modal" data-target="#AddTokenForm" class="btn btn-success" style="margin:0 0 10px 0">Добавить</button>
            <!--Триггер-->
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Ключ</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var token in Model.Tokens)
                {
                    <form method="post">
                    <tr>
                    <td>@token.Id</td>
                    <td>@token.Key</td>
                    <td>
                        <button type="submit" asp-page-handler="RemoveToken" asp-route-id="@token.Id" class="btn btn-danger">Удалить</button>
                    </td>
                    </tr>
                    </form>
                }
                </tbody>
            </table>
        </div>
    </div>
    <!--Конец списка пользователей-->
</div>
<!-- Модальное окно -->
<div class="modal fade" id="AddTokenForm" tabindex="-1" aria-labelledby="AddTokenFormLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="AddTokenFormLabel">Добавить новый ключ</h2>
      </div>
      <div class="modal-body">
          <form method="post" id="AddForm">
                <div class="form-group">
                    <label asp-for="Input.Key"></label>
                    <input asp-for="Input.Key" class="form-control" />
                    <span asp-validation-for="Input.Key" class="text-danger"></span>
                </div>
                <br />
                    <div class="form-group float-end">
                        <button type="submit" asp-page-handler="AddToken" class="btn btn-success">Добавить</button>
                    </div>
            </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
      </div>
    </div>
  </div>
</div>