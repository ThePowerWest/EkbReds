@page
@model IndexModel
@{
    ViewBag.Title = "Reds Bets";
}

<partial name="_Slider">
    <!--Main Content Start-->
    <div class="main-content wf100">
        <partial name="_SlideTabs" model="Model.ThreeBeforeNextMatches">
            <!--Sports Widgets Start-->
            <section class="wf100 p80">
                <div class="container">
                    <div class="row">
                        <partial name="_NextMatch" model="Model.NextMatch">
                            <partial name="_AfterNextMatch" model="Model.ThreeAfterNextMatches">
                                <partial name="_TablePoints" model="Model.PointTable">
                    </div>
                </div>
            </section>
            <!--Sports Widgets End-->
    </div>
    <!--Main Content End-->
    @section Scripts
        {
        <script>
            // ------- countdown ------- //
            if ($('.defaultCountdown').length) {
                austDay = new Date(@Model.NextMatch.EndTimeForPrediction.AddMonths(-1).ToString("yyyy,MM,dd,HH,mm,ss"));
                $('.defaultCountdown').countdown({
                    until: austDay,
                    onExpiry: function() {
                        hidePrediction();
                    }
                });
                $('#year').text(austDay.getFullYear());
            }

            function hidePrediction() {
                $('#makePrediction').hide();
                $('#homePredict').prop("readonly", true);
                $('#awayPredict').prop("readonly", true);
            }
        </script>
    }
